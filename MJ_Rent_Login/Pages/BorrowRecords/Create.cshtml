@page
@model MJ_Rent_Login.Pages.BorrowRecords.CreateModel

@{
    ViewData["Title"] = "新增訂房紀錄";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>新增</h1>

<h4>訂房紀錄</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="BorrowRecord.RoomId" class="control-label"></label>
                <!--選擇房間-->
                <select asp-for="BorrowRecord.RoomId" asp-items="Model.Names" class="form-select">
                    <!--<option value=""></option>-->
                </select>
                <!--
                <input asp-for="BorrowRecord.RoomId" class="form-control" />-->
                <span asp-validation-for="BorrowRecord.RoomId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BorrowRecord.UserId" class="control-label"></label>
                <input asp-for="BorrowRecord.UserId" class="form-control" />
                <span asp-validation-for="BorrowRecord.UserId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BorrowRecord.BorrowDateTime" class="control-label"></label>
                <input asp-for="BorrowRecord.BorrowDateTime" class="form-control" />
                <span asp-validation-for="BorrowRecord.BorrowDateTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BorrowRecord.PreBorrowTimeLength" class="control-label"></label>
                <input asp-for="BorrowRecord.PreBorrowTimeLength" class="form-control" />
                <span asp-validation-for="BorrowRecord.PreBorrowTimeLength" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BorrowRecord.ActualBorrowTime" class="control-label"></label>
                <input asp-for="BorrowRecord.ActualBorrowTime" class="form-control" />
                <span asp-validation-for="BorrowRecord.ActualBorrowTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="新增" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">返回列表</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
