@page
@model MJ_Rent_Login.Pages.NotifyInfos.EditModel

@{
    ViewData["Title"] = "編輯通知";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>編輯</h1>

<h4>通知</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="NotifyInfo.Id" />
            <div class="form-group">
                <label asp-for="NotifyInfo.UserId" class="control-label"></label>
                <input asp-for="NotifyInfo.UserId" class="form-control" />
                <span asp-validation-for="NotifyInfo.UserId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NotifyInfo.InfoContext" class="control-label"></label>
                <input asp-for="NotifyInfo.InfoContext" class="form-control" />
                <span asp-validation-for="NotifyInfo.InfoContext" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="NotifyInfo.HaveNotify" /> @Html.DisplayNameFor(model => model.NotifyInfo.HaveNotify)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="儲存" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">返回列表</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
