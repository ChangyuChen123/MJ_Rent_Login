@page
@model MJ_Rent_Login.Pages.Reserves.EditModel

@{
    ViewData["Title"] = "編輯預約";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>編輯</h1>

<h4>預約</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Reserve.Id" />
            <div class="form-group">
                <label asp-for="Reserve.RoomId" class="control-label"></label>
                <select asp-for="Reserve.RoomId" asp-items="Model.Names" class="form-select">
                    <!--<option value=""></option>-->
                </select>
                <!--<input asp-for="Reserve.RoomId" class="form-control" />-->
                <span asp-validation-for="Reserve.RoomId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Reserve.UserId" class="control-label"></label>
                <input asp-for="Reserve.UserId" class="form-control" />
                <span asp-validation-for="Reserve.UserId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Reserve.ResDateTime" class="control-label"></label>
                <input asp-for="Reserve.ResDateTime" class="form-control" />
                <span asp-validation-for="Reserve.ResDateTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Reserve.ResTimeLength" class="control-label"></label>

                <select class="form-select" aria-label="Default select example" asp-for="Reserve.ResTimeLength">
                    <option selected>請選擇時間長度</option>
                    <option value="30">30</option>
                    <option value="60">60</option>
                    <option value="90">90</option>
                    <option value="120">120</option>
                    <option value="150">150</option>
                    <option value="180">180</option>
                    <option value="300">300</option>
                    <option value="480">480</option>
                </select>

                <span asp-validation-for="Reserve.ResTimeLength" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="儲存" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">返回列表</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
